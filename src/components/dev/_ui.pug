.dev
  .container
    // SECTION
    section
      .wysiwyg
        h3 Based on <a href="https://github.com/dpmango/gulp-starter-pack" target="_blank">gulp starter pack</a>


    // SECTION
    section.dev__section
      h1.h1-title JS and barba
      .wysiwyg
        p please use _document.on('click', 'el_selector', function ... ) for barba.js bindings


    // SECTION
    section.dev__section
      h1.h1-title Typography

      .wysiwyg
